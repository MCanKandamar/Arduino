#include  <SPI.h> 
#include "nRF24L01.h"
#include "RF24.h"    

 
int mesaj[1];  
    
RF24 verici(9,10);  // CE CSN 

//const int kanal = 131;
const uint64_t pipe = 0xE8E8F0F0E1LL;


int up_button = 2;    //A buton
int down_button = 4;  //C buton
int right_button = 3; //B buton
int left_button = 5;  //D buton
int f_button = 7;     //E buton
int e_button = 6;     //F buton
int x_axis = A0;      //Joystick X
int y_axis = A1;      //Joystick Y

void setup()
{

  verici.begin(); 
  verici.openWritingPipe(pipe);
  verici.stopListening();
}


void loop()
{
  if (digitalRead(f_button) == LOW)
  { 
    mesaj[0] = 50; 
    verici.write(&mesaj, sizeof(mesaj));
  }
  else if (digitalRead(up_button) == LOW)
  {
    mesaj[0] = 60;
    verici.write(&mesaj, sizeof(mesaj));
  }
  else if (digitalRead(down_button) == LOW)
  {
    mesaj[0] = 70;
    verici.write(&mesaj, sizeof(mesaj));
  }
  else if (digitalRead(right_button) == LOW)
  {
    mesaj[0] = 80;
    verici.write(&mesaj, sizeof(mesaj));
  }
  else if (digitalRead(left_button) == LOW)
  {
    mesaj[0] = 90;
    verici.write(&mesaj, sizeof(mesaj));
  }  

    
}
